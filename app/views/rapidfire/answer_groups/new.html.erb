<h2>Please answer these Questions</h2>
<hr/>

<% if @answer_group_builder.answers.blank? %>
	There are no questions to answer
<% else %>
<%= form_for([@question_group, @answer_group_builder], :html => {:class => 'form-horizontal' }) do |f| %>
  <%- @answer_group_builder.answers.each do |answer| %>
    <%= f.fields_for("#{answer.question.id}", answer) do |answer_form| %>
		<div class="form-group">
			<%= render_answer_form_helper(answer, answer_form) %>
		</div>
    <% end %>
  <% end %>
  <%= f.submit "Save" %>
<% end %>
<% end %>