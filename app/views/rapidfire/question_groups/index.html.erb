<h2>
  Surveys
  <% if can_administer? %>
    <%= link_to "New Survey", new_question_group_path %>
  <% end %>
</h2>
<hr/>

<% if @question_groups.blank? %>
  No avalilable surveys.
<% else %>
<table class="table table-striped">
  <thead>
    <th>
      Survey Name
    </th>
    <% if can_administer? %>
    <th>
      Operations
    </th>
    <% end %>
  </thead>
  <tbody>
    <%= render partial: "question_group", collection: @question_groups %>
  </tbody>
</table>
<% end %>
