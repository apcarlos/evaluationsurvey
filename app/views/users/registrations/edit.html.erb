<h2>Edit <%= resource_name.to_s.humanize %></h2>
<% content_for :resource, "Settings for #{:first_name}" %>
<ul class="nav nav-tabs" role="tablist">
  <li class="active">
    <a data-toggle="tab" href="#profile" role="tab">
      Profile
    </a>
  </li>
  <li>
    <a data-toggle="tab" href="#password" role="tab">
      Password
    </a>
  </li>
  <li>
    <a data-toggle="tab" href="#account" role="tab">
      Account
    </a>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane active col-md-12" id="profile">
    <%= render :partial => "edit_profile" %>
  </div>
  <div class="tab-pane col-md-12" id="password">
    <%= render :partial => "edit_password" %>
  </div>
  <div class="tab-pane col-md-12" id="account">
    <%= render :partial => "edit_account" %>
  </div>
</div>

<%= link_to "Back", :back %>
